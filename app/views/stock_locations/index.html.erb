<a href="/stock_control" class="btn btn-large" ><i class="icon-chevron-left"></i></a>
<h1 style="display:inline">Listing Stock Locations</h1>

<table class="table table-bordered table-striped">
  <tr>
    <th>Name</th>
    <th></th>
  </tr>

<% @stock_locations.each do |stock_location| %>
  <tr>
    <td><%= stock_location.name %></td>
    <td><%= link_to 'Show', stock_location %> - <%= link_to 'Edit', edit_stock_location_path(stock_location) %> - <%= link_to 'Destroy', stock_location, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Stock location', new_stock_location_path, :class=>"btn btn-primary" %>
