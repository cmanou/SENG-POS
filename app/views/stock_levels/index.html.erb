<h1>Listing stock_levels</h1>

<table>
  <tr>
    <th>Product</th>
    <th>Stock location</th>
    <th>Quanity</th>
    <th>Threshold</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @stock_levels.each do |stock_level| %>
  <tr>
    <td><%= stock_level.product %></td>
    <td><%= stock_level.stock_location %></td>
    <td><%= stock_level.quanity %></td>
    <td><%= stock_level.threshold %></td>
    <td><%= link_to 'Show', stock_level %></td>
    <td><%= link_to 'Edit', edit_stock_level_path(stock_level) %></td>
    <td><%= link_to 'Destroy', stock_level, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

