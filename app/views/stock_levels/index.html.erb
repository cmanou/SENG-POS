<% title "Stock Control" %>

<h1>Welcome To Stock Control</h1>

<div class="row-fluid">
  <div class="span12">
    <div class="well">
      <a class="btn btn-large" href="/products">Products</a>
      <a class="btn btn-large" href="/stock_locations">Stock Locations</a>
      <a class="btn btn-large" href="/stock_transfers">Stock Transfers</a>
    </div>
  </div>
</div>

<table class="table table-bordered table-striped">
  <tr>
    <th>Product</th>
    <th>Stock location</th>
    <th>Quanity</th>
    <th>Threshold</th>
    <!--<th></th>-->
  </tr>

<% @stock_levels.each do |stock_level| %>
  <tr>
    <td><%= stock_level.product.name %></td>
    <td><%= stock_level.stock_location.name %></td>
    <td><%= stock_level.quanity %></td>
    <td><%= stock_level.threshold %></td>
   <!--<<td class="btn-group"><%= link_to 'Show', stock_level, :class=>"btn btn-success"%>
      <%= link_to 'Edit', edit_stock_level_path(stock_level), :class=>"btn btn-warning" %>
      <%= link_to 'Destroy', stock_level, :class=>"btn btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %>
    </td>-->
    </tr>
<% end %>
</table>

