<%= title "Listing Stock Transfers" %>

<table class="table table-bordered">
  <tr>
    <th>Product</th>
    <th>Transfer To</th>
    <th>Quantity</th>
    <th>Complete</th>
    <th></th>

  </tr>

<% @stock_transfers.each do |stock_transfer| %>
  <tr>
    <td><%= stock_transfer.product.name %></td>
    <td><%= stock_transfer.stock_location.name %></td>
    <td><%= stock_transfer.quantity %></td>
    <td><%= stock_transfer.complete %></td>
    <td class="btn-group"><%= link_to 'Show', stock_transfer, :class=>"btn btn-success"%>
      <%= link_to 'Edit', edit_stock_transfer_path(stock_transfer), :class=>"btn btn-warning" %>
      <%= link_to 'Destroy', stock_transfer, :class=>"btn btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %>
    </td>
  </tr>
<% end %>
</table>

<br />

