<% title "Sales Listing" %>

<%= link_to 'New Sale', new_sale_path, :class  => 'btn btn-large' %>

<h2>Checking Out</h2>

<table class="table table-bordered table-striped">
  <tr>
    <th>Date</th>
    <th>Total Price</th>
    <th>Checkout User</th>
    <th>Tools</th>
  </tr>

  <% @sales.each do |sale| %>
    <tr>
      <td><%= sale.created_at %></td>
      <td><%= number_to_currency(sale.total) %></td>
      <td><%= sale.checkout_user.email %></td>
      <td class="btn-group">
 	<%= link_to 'Show', sale, :class=>"btn btn-success"%>
	<%= link_to 'Continue', edit_sale_path(sale), :class=>"btn" %>
	<%= link_to 'Cancel', sale, :class=>"btn", method: :delete, data: { confirm: 'Are you sure?' } %>
      </td>
    </tr>
  <% end %>
</table>

<h2>Payment In Progress</h2>

<table class="table table-bordered table-striped">
  <tr>
    <th>Date</th>
    <th>Customer</th>
    <th>Total Price</th>
    <th>Checkout User</th>
    <th>Tools</th>
  </tr>
</table>

<h2>Complete</h2>

<table class="table table-bordered table-striped">
  <tr>
    <th>Date</th>
    <th>Customer</th>
    <th>Total Price</th>
    <th>Checkout User</th>
    <th>Tools</th>
  </tr>
</table>

