<% title "Sales Listing" %>

<table class="table table-bordered table-striped">
  <tr>
    <th>Date</th>
    <th>Customer</th>
    <th>Total Price</th>
    <th>Checkout User</th>
    <th>Tools</th>
  </tr>

  <% @sales.each do |sale| %>
    <tr>
      <td>
	<%= sale.created_at %>
      </td>
      <td>
	<%= sale.customer.email %>
      </td>
      <td>
	$<%= sale.total %>
      </td>
      <td>
	<%= sale.checkout_user.email %>
      </td>
      <td class="btn-group">
	<%= link_to 'Show', sale, :class=>"btn btn-success"%>
<!-- can't modify sales
	<%= link_to 'Edit', edit_sale_path(sale), :class=>"btn btn-warning" %>
	<%= link_to 'Destroy', sale, :class=>"btn btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %>
-->
      </td>
    </tr>
  <% end %>
</table>

