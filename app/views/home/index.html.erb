
<% title "Home" %>

<h1>Welcome To POSSIE</h1>

<center>
  <div class="row-fluid">
    <div class="span8 offset2">
      <div class="well">
        <% if user_signed_in? %>
        <% if current_user.can_checkout %>
        <a class="btn btn-super" href="#cash-register">Cash Register</a>
        <% end %>
        <% if current_user.can_manage_stock %>
        <%= link_to "Stock Control", stock_levels_path, :class => 'btn btn-super' %>
        <% end %>
        <% if current_user.can_report %>
        <a class="btn btn-super" href="#reporting">Reporting</a>
        <% end %>
        <% end %>
      </div>
    </div>
  </div>
</center>