<%= form_for(@product) do |f| %>
  <% if @product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% @product.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :barcode %><br />
    <%= f.text_field :barcode %>
  </div>
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :cost %><br />
    $ <%= f.text_field number_with_precision(:cost, :precision => 2) %>
  </div>
  <div class="field">
    <%= f.label :price %><br />
    $ <%= f.text_field number_with_precision(:price, :precision => 2) %>
  </div>
  <h3>Stock Levels</h3>

  <% @product.stock_levels.each do |s| %>
    <%= fields_for "stock_level[#{s.stock_location.id}]", s do |builder| %>
          <h4><%= s.stock_location.name %></h4>
          <%= builder.label :quanity, 'Quantity' %><br />
          <%= builder.number_field :quanity %>

          <%= builder.label :threshold %><br />
          <%= builder.number_field :threshold %>
    <% end %>
  <% end %>


  <div class="actions">
    <%= f.submit :class=>"btn btn-primary"%>
  </div>
<% end %>
