<% title "Product Listing" %>


<a href="/stock_control" class="btn btn-large" ><i class="icon-chevron-left"></i></a>
<h1 style="display:inline">Listing Products</h1>

<table class="table table-bordered table-striped">
  <tr>
    <th>Name</th>
    <th>Cost</th>
    <th>Price</th>
    <% StockLocation.order("id").each do |s| %>
      <th><%= s.name %></th>
    <% end %>
    <th>Tools</th>
  </tr>

<% @products.each do |product| %>
  <tr>
    <td><%= product.name %></td>
    <td><%= product.cost %></td>
    <td><%= product.price %></td>
    
      <% product.stock_levels.order("stock_location_id").each do |s| %>
      <td>
          Quantity: <%= s.quanity %><br>
          Threshold: <%= s.threshold %><br><br>
      </td>
      <% end %>

    <td class="btn-group"><%= link_to 'Show', product, :class=>"btn btn-success"%>
      <%= link_to 'Edit', edit_product_path(product), :class=>"btn btn-warning" %>
      <%= link_to 'Destroy', product, :class=>"btn btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %>
    </td>
  </tr>
<% end %>
</table>

<br />
<%= link_to 'New Product', new_product_path, :class=>"btn btn-primary" %>
