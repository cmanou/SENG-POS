
<p id="notice"><%= notice %></p>
<%= title "Product Details" %>
<table class="table table-bordered table-striped">
<tr>
  <th>Name:</th>
  <td><%= @product.name %></td>
</tr>
<tr>
  <th>Supplier:</th>
  <td><%= @product.supplier.name %></td>
</tr>
<tr>
  <th>Barcode:</th>
  <td><%= @product.barcode %></td>
</tr>
<tr>
  <th>Description:</th>
  <td><%= @product.description %></td>
</tr>
<tr>
  <th>Cost:</th>
  <td>$ <%= number_with_precision(@product.cost, :precision => 2) %></td>
</tr>

<tr>
  <th>Price:</th>
  <td>$ <%= number_with_precision(@product.price, :precision => 2) %></td>
</tr>

  <tr>
    <th>Brand</th>
    <td><%= @product.brand %></td>
  </tr>
  <tr>
    <th>Size</th>
    <td><%= number_with_precision(@product.size, :precision => 2) %></td>
  </tr>
  <tr>
    <th>Active</th>
    <td><%= @product.active %></td>
  </tr>

<tr><th colspan=2>Stock Levels</th></tr>
<% @product.stock_levels.each do |s| %>
<tr>
    <th><%= s.stock_location.name %></th>
    <td>Quantity: <%= s.quanity %><br>
    Threshold: <%= s.threshold %></td>
</tr>
<% end %>
</table>



<div class="btn-group">
<%= link_to 'Edit', edit_product_path(@product), :class=>"btn"%>
<%= link_to 'Back', products_path, :class=>"btn" %>
</div>